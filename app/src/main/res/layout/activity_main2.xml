        <EditText
            android:id="@+id/RName"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/RSurname"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="9dp"
            android:ems="10"
            android:hint="Surname"
            android:inputType="textPersonName"
            android:lines="@android:integer/config_longAnimTime"
            android:maxEms="12"
            android:singleLine="true"
            android:soundEffectsEnabled="true"
            android:textColor="#ffffff"
            android:textColorHint="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RName" />

        <EditText
            android:id="@+id/RUsernameET"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="9dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:lines="@android:integer/config_longAnimTime"
            android:maxEms="12"
            android:singleLine="true"
            android:soundEffectsEnabled="true"
            android:textColor="#ffffff"
            android:textColorHint="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RSurname" />

        <EditText
            android:id="@+id/RpasswordET"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="9dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:lines="@android:integer/config_longAnimTime"
            android:maxEms="12"
            android:singleLine="true"
            android:soundEffectsEnabled="true"
            android:textColor="#ffffff"
            android:textColorHint="@android:color/background_light"
