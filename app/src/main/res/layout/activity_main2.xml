        <EditText
            android:id="@+id/RRepassword"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="9dp"
            android:ems="10"
            android:hint="Re-Password"
            android:inputType="textPassword"
            android:lines="@android:integer/config_longAnimTime"
            android:maxEms="12"
            android:singleLine="true"
            android:soundEffectsEnabled="true"
            android:textColor="#ffffff"
            android:textColorHint="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RpasswordET" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:src="#ffffff"

            app:layout_constraintEnd_toEndOf="@+id/RName"
            app:layout_constraintStart_toStartOf="@+id/RName"
            app:layout_constraintTop_toBottomOf="@+id/RName" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
