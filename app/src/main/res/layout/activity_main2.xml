        <Button
            android:id="@+id/Loginbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:alpha="0.8"
